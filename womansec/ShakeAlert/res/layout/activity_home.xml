<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".Home">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Shake Alert !!!  Applications"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="3"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="profile INfo"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/widget_edittext_dark"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/pfname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="profile Name :"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/widget_edittext_dark"
                android:textStyle="italic" />

            <TextView

                android:id="@+id/pfname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/widget_edittext_dark"
                android:textStyle="italic" />"


        </LinearLayout>

        <ImageView
            android:id="@+id/pfphoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="2"
            android:src="@drawable/addcontacticon" />

    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="218dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:background="@android:color/background_light"
        android:text="HELLO !!!\n \nI need Help  \n \nAlert App "
        android:textStyle="italic" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@android:color/holo_red_light"
        android:phoneNumber="false"
        android:text="SHAKE MESSAGE"
        android:textStyle="italic" />

</LinearLayout>